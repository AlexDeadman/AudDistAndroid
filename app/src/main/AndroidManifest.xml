<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.auddistandroid">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AudDistApplication"
        android:allowBackup="true"
        android:icon="@drawable/calendar_clock"
        android:label="@string/app_name"
        android:roundIcon="@drawable/calendar_clock"
        android:supportsRtl="true"
        android:theme="@style/Theme.AudDistAndroid"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SettingsActivity"
            android:theme="@style/Theme.AudDistAndroid.ActionBar"
            android:parentActivityName=".ui.MainActivity"> <!-- TODO check SettingsActivity -->
        </activity>
    </application>

</manifest>